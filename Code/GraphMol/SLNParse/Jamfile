project GraphMol/SLNParse : requirements <library>/boost/regex//boost_regex : ;
import os ;
import bison ;
import lex ;

local RDBASE = [ os.environ RDBASE ] ;

lib SLNParse : lex.yysln.cpp   sln.tab.cpp SLNParse.cpp SLNAttribs.cpp ..//GraphMol ../..//RDGeneral//RDGeneral ../../Geometry//RDGeometry 
  : <include>. <toolset>msvc:<link>static 
  <toolset>msvc:<define>YY_NO_UNISTD_H
<library>/boost/regex//boost_regex
  ;
install lib-install : SLNParse : <location>$(RDBASE)/bin ;

cpp lex.yysln.cpp : sln.ll : <flex.prefix>yysln_ <implicit-dependency>sln.tab.cpp  ;
cpp sln.tab.cpp : sln.yy : <bison.prefix>yysln_ ;

exe test : test.cpp SLNParse 
  ..//GraphMol   ../SmilesParse//SmilesParse
  ../Substruct//Substruct 
  ../../RDGeneral//RDGeneral ../../Geometry//RDGeometry 
;

install regrs : test
  : <location>testExecs ;



