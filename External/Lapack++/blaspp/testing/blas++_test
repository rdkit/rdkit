set testsuite = (tblasd++)
set N = (10 40)
set M = (20 40)

# run local test and check it against supplied results
foreach t ($testsuite)
    set answer = $t:t.out
    echo "$t $N[1] $M[1] >& $answer"
    ./$t $N[1] $M[1] >& $answer

end

